<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
    >

    <TextView
        android:id="@+id/noListsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="180dp"
        android:gravity="center_horizontal"
        android:text="You Have No Lists"
        android:textSize="24sp"
        android:paddingTop="100dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/noListsText2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/noListsText"
            android:layout_alignStart="@+id/noListsText"
            android:layout_below="@+id/noListsText"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Press"/>

        <ImageView
            android:id="@+id/noListsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/noListsText2"
            android:layout_weight="0.09"
            android:foregroundGravity="center_vertical|center_horizontal"
            app:srcCompat="@drawable/ic_list_add_dark"/>

        <TextView
            android:id="@+id/noListsText3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/noListsText"
            android:layout_toEndOf="@+id/noListsIcon"
            android:layout_toRightOf="@+id/noListsIcon"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="left|center_vertical"
            android:text="to Create One"/>

    </LinearLayout>


</LinearLayout>